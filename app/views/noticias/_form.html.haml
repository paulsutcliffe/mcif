= form_for @noticia do |f|
  - if @noticia.errors.any?
    #error_explanation
      %h2= "#{pluralize(@noticia.errors.count, "error")} prohibited this noticia from being saved:"
      %ul
        - @noticia.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :titulo
    = f.text_field :titulo
  .field
    = f.label :subtitulo
    = f.text_field :subtitulo
  .field
    = f.label :contenido
    = f.text_area :contenido
  .field
    = f.label :link
    = f.text_field :link
  .field
    = f.label :tipo
    = f.text_field :tipo
  .field
    = f.label :fecha
    = f.date_select :fecha
  .field
    = f.label :categoria
    = f.text_field :categoria
  .field
    = f.label :destacado
    = f.check_box :destacado
  .actions
    = f.submit 'Save'
