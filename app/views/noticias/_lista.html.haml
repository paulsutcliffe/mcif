
#region-noticias-buscador.container
  .region
    .region-inner
      %form.form-horizontal
        .form-group
          %label.col-sm-1.control-label Buscador
          .col-sm-5
            %input{:type => 'text', class: 'form-control'}
          .col-sm-2
            %button.btn.btn-default
              Enviar

#region-noticias-destacados.container
  .region
    .region-title
      %h2.title.subtitle Destacados
      - @destacados.each do |destacado|
        .region-inner
          .block-rounded
            %span.date
              = destacado.fecha
            %h3
              = link_to destacado.titulo, destacado
            = link_to 'Leer más', destacado, class: 'default-button'
            - if current_admin
              = link_to 'Editar', edit_noticia_path(destacado)
              = link_to 'Eliminar', destacado, :method => :delete, :data => { :confirm => '¿Estas seguro?' }


#carousel-noticias-list.carousel.slide.container
  .region
    .region-title
      %ol.carousel-indicators
        - Noticia::TIPOS.each_with_index do |tipo, index|
          - if index == 0
            %li.active{:'data-target' => '#carousel-noticias-list', :'data-slide-to' => index}
              %h2.title= tipo
          - else
            %li{:'data-target' => '#carousel-noticias-list', :'data-slide-to' => index}
              %h2.title= tipo

    .carousel-inner
      - @noticias.each_slice(4).each_with_index do |noticia, index|
        - if index == 0
          .item.active
            -  noticia.each do |noticia|
              .region-inner
                = image_tag noticia.imagenes.first.imagen_url(:thumb) if noticia.imagenes.first
                link_to noticia.titulo, noticia
                = admin_controls('Editar', edit_noticia_path(noticia), 'down')       
                - if current_admin
                  = link_to 'Eliminar', noticia, :method => :delete, :data => { :confirm => '¿Estas Seguro?' }
        - else
          .item
            -  noticia.each do |noticia|
              .region-inner
                = image_tag noticia.imagenes.first.imagen_url(:thumb) if noticia.imagenes.first
                = link_to noticia.titulo, noticia
                = admin_controls('Editar', edit_noticia_path(noticia), 'down')       
                - if current_admin
                  = link_to 'Eliminar', noticia, :method => :delete, :data => { :confirm => '¿Estas Seguro?' }


