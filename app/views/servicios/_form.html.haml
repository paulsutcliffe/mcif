= form_for @servicio, :html => { :multipart => true} do |f|
  - if @servicio.errors.any?
    #error_explanation
      %h2= "#{pluralize(@servicio.errors.count, "error")} prohibited this servicio from being saved:"
      %ul
        - @servicio.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :icono
    = f.file_field :icono
  .field
    = f.label :nombre
    = f.text_field :nombre
  .field
    = f.label :contenido
    = f.text_area :contenido
  .actions
    = f.submit 'Save'
