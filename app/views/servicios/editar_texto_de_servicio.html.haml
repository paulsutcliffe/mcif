= render 'scripts/tiny_mce'

= form_for @texto_de_servicio, url: servicios_update_texto_de_servicio_path, method: :put, html: { class: 'form-horizontal', role: 'form' } do |f|
  - if @texto_de_servicio.errors.any?
    #error_explanation
      %h2= "#{pluralize(@texto_de_servicio.errors.count, "error")}"
      %ul
        - @texto_de_servicio.errors.full_messages.each do |msg|
          %li= msg
  .form-group
    .col-sm-10
      %h1.editar
        Editar Servicio

  .form-group
    = f.label :subtitulo, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :subtitulo, class: 'form-control'
  .form-group
    = f.label :contenido, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_area :contenido, class: 'tinymce'
      .actions
        = f.submit 'Guardar', class: 'btn btn-default'
