= form_for @proyecto, :html => { multipart: true, class: 'form-horizontal', role: 'form' } do |f|
  - if @proyecto.errors.any?
    #error_explanation
      %h2= "#{pluralize(@proyecto.errors.count, "error")}"
      %ul
        - @proyecto.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :nombre, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :nombre, class: 'form-control'
  .form-group
    = f.label :logo, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.file_field :logo, class: 'form-control'
  .form-group
    = f.label :foto, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.file_field :foto, class: 'form-control'
  .form-group
    = f.label :contenido, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_area :contenido, class: 'tinymce'
  .actions
    = f.submit 'Guardar', class: 'btn btn-default'
