= form_for @miembro, :html => { :multipart => true} do |f|
  - if @miembro.errors.any?
    #error_explanation
      %h2= "#{pluralize(@miembro.errors.count, "error")} prohibited this miembro from being saved:"
      %ul
        - @miembro.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nombre
    = f.text_field :nombre
  .field
    = f.label :tipo
    = f.select :tipo, Miembro::TIPOS.collect { |i| [i]}
  .field
    = f.label :fotografia
    = f.file_field :fotografia
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :linkedin
    = f.text_field :linkedin
  .field
    = f.label :contenido
    = f.text_area :contenido, class: 'tinymce'
  .field
    = f.label :puesto
    = f.text_field :puesto
  .actions
    = f.submit 'Save'
