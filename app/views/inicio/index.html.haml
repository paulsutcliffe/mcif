- page_title!(' Mercados de Capitales, Inversiones y Finanzas Consultores S.A.')

= render 'bootstrap3_carousel'

#presentacion.container
  .region
    .region-title
      %h2.title  MC&F - Mercados de Capitales, Inversiones y Finanzas Consultores S.A.
    .region-inner
      %i.icon.person_chart
      %p
        = I18n.t 'inicio.resumen'

#servicios-region
  .container
    .region
      .region-title
        %h2.title
          = I18n.t 'inicio.servicios'
    .region
      - @servicios.each do |servicio|
        .region-inner
          = image_tag servicio.icono_url(:thumb)
          .vertical-wrapper
            .vertical
              %h3.vertical-inner
                = link_to servicio.nombre, servicios_path(servicio_id: servicio)




#clientes-region.container
  .region
    .region-title
      %h2.title
        = I18n.t 'inicio.clientes'
        = admin_create('Nuevo Cliente', new_cliente_path)
  = render 'clientes_carousel'


