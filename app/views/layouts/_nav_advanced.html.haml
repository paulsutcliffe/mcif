%nav.navbar.navbar-default{role: "navigation"}

  / Brand and toggle get grouped for better mobile display
  .navbar-header
    %button.navbar-toggle{"data-target" => ".navbar-ex1-collapse", "data-toggle" => "collapse", type: "button"}
      %span.sr-only Toggle navigation
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar

  / Collect the nav links, forms, and other content for toggling
  .collapse.navbar-collapse.navbar-ex1-collapse
    %ul.nav.navbar-nav.navbar-right

      %li= link_to (I18n.t 'menu.inicio'), root_path

      %li= link_to (I18n.t 'menu.nosotros'), miembros_path

      %li= link_to (I18n.t 'menu.asociados'), asociados_path

      %li.dropdown
        = link_to (I18n.t 'menu.servicios'), servicios_path, class: 'dropdown-toggle', :"data-toggle" => 'dropdown'
        %ul.dropdown-menu
          - @menu_servicios.each do |servicio|
            %li= link_to servicio.nombre, servicios_path(servicio_id: servicio)

      %li.dropdown
        = link_to (I18n.t 'menu.noticias'), '', class: 'dropdown-toggle', :"data-toggle" => 'dropdown'
        %ul.dropdown-menu
          %li= link_to (I18n.t 'menu.noticias_mcif'), noticias_mcif_path
          %li= link_to (I18n.t 'menu.noticias_recomendadas'), noticias_recomendadas_path
      %li.dropdown
        = link_to (I18n.t 'menu.publicaciones'), '', class: 'dropdown-toggle', :"data-toggle" => 'dropdown'
        %ul.dropdown-menu
          %li= link_to (I18n.t 'menu.publicaciones_mcif'), publicaciones_mcif_path
          %li= link_to (I18n.t 'menu.publicaciones_recomendadas'), publicaciones_recomendadas_path

      - if current_admin
        %li= link_to (I18n.t 'menu.mensajes'), contactos_path
      - else
        %li= link_to (I18n.t 'menu.contactenos'), new_contacto_path

      - if current_admin
        %li= link_to (I18n.t 'menu.cerrar_sesion'), destroy_admin_session_path, :method => :delete


  .bevel
  / /.navbar-collapse




